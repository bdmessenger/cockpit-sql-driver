# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# PHPUnit
[{phpunit.xml.dist,phpunit.xml,tests/travis/*.phpunit.xml}]
indent_size = 4

# Other JSON configs
[composer.json]
indent_size = 4
